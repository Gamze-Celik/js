@model IEnumerable<UygulamaHavuzum.Models.TodoList>

@{
    ViewData["Title"] = "Todo App";

}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Todo App (Beginner): Igwegbe Caleb</title>
    <meta name="description" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://pro.fontawesome.com/releases/v5.10.0/css/all.css" integrity="sha384-AYmEC3Yw5cVb3ZcuHtOA93w35dYTsvhLPVnYs9eStHfGJvOvKxVfELGroGkvsg+p" crossorigin="anonymous" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Bree+Serif&display=swap" rel="stylesheet">

    <link href="https://fonts.googleapis.com/css2?family=Roboto+Slab:wght@400;500;600&display=swap" rel="stylesheet" />

</head>
<body>

    <div class="todoContent">
        <h2 class="todoText">Todo App</h2>

        <p class="warning-text"></p>
        <!--Create input box for entering todo values-->

        <div class="todoInput-container">
            <input type="text" class="todoInput" placeholder="Todo New Task.." autofocus>

            <button class="todoBtn" id="todoAdd"><i class="fa fa-plus"></i></button>

            <!--Create empty ul for appending todo values-->


        </div>

        <ul class="todoItems"></ul>

        <button class="clearBtn">Clear all tasks</button>

    </div>

    <link rel="stylesheet" href="~/css/todo.css" asp-append-version="true" />

    @section Scripts{
        <script src="~/js/todo.js"></script>
    }
        
    </body>
</html>
